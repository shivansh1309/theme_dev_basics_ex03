<?xml version = "1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="register-link" remove="true" />           <!--for Create Account Link-->
        <referenceBlock name="authorization-link" remove="true" />      <!--for Sign In Link  -->
        <referenceBlock name="wish-list-link" remove="true" />          <!--for WishList Link-->
        <referenceBlock name="my-account-link" remove="true" /> 
        <referenceBlock name = "top.links">
            <block class = "Magento\Framework\View\Element\Html\Link" name = "good_morning">
                <arguments>
                    <argument name = "label" xsi:type = "string">Good Morning</argument>
                    <argument name = "path" xsi:type = "string">good-morning</argument>
                </arguments>
            </block>
        </referenceBlock>
    </body>
</page>