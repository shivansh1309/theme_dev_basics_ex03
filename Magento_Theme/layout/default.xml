<?xml version = "1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="footer">
            <container after="footer_links" name='social.links' htmlTag="ul" htmlClass="footer links">
                <block name="facebook" class="Magento\Framework\View\Element\Template" template="Magento_Theme::facebook.phtml" />
                <block name="google" class="Magento\Framework\View\Element\Template" template="Magento_Theme::google.phtml" />
                <block name="twitter" class="Magento\Framework\View\Element\Template" template="Magento_Theme::twitter.phtml" />
            </container>
        </referenceContainer>
    </body>
</page>